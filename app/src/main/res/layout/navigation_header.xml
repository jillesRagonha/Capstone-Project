<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_pattern"
    android:background="@drawable/nav_background"
    android:gravity="bottom"
    android:orientation="vertical"

    android:padding="@dimen/default_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_image_perfil"
        android:layout_width="@dimen/tamanho_avatar"
        android:layout_height="@dimen/tamanho_avatar"
        android:layout_margin="@dimen/default_margin" />

    <TextView
        android:id="@+id/nav_text_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textIconsColor" />

    <TextView
        android:id="@+id/nav_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textColor="@color/textIconsColor" />
</LinearLayout>