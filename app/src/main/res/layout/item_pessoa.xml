<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_pessoa"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="parent"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pessoa_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@id/avatar_pessoa"
        app:layout_constraintTop_toTopOf="@id/avatar_pessoa"
        tools:text="Nome da Pessoa" />

    <TextView
        android:id="@+id/item_pessoa_condicao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@id/item_pessoa_nome"
        app:layout_constraintTop_toBottomOf="@id/item_pessoa_nome"
        tools:text="Autor" />

</android.support.constraint.ConstraintLayout>